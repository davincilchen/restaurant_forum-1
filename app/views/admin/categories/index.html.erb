<h1>Category</h1>

<%= link_to "Restaurants", admin_restaurants_path %>


<%= form_for [:admin, @category], html: {class: "form-inline"} do |f| %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: "Category Name", class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-default"%>
  <% if @category.errors.any? %>
    <%= @category.errors.full_messages.to_sentence %>
  <% end %>
<% end %>


<br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th></th><th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= link_to "Edit", admin_categories_path(id: category.id) %></td>
        <td><%= link_to "Delete", admin_category_path(category),
        method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
