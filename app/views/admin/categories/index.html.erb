<h1 class="index-title">Categories List</h1>

<%= link_to admin_restaurants_path, class: "btn btn-default" do %>
  <span class="glyphicon glyphicon-arrow-left"></span> Restaurants List
<% end %>
<hr>

<%= form_for [:admin, @category], html: {class: "form-inline"} do |f| %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: "Category Name", class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-default"%>
  <% if @category.errors.any? %>
    <%= @category.errors.full_messages.to_sentence %>
  <% end %>
<% end %>


<br>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th></th><th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= link_to "編輯", admin_categories_path(id: category.id),
        class: "btn btn-default" %></td>
        <td><%= link_to "刪除", admin_category_path(category),
        class: "btn btn-default", method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
