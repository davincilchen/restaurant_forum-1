<!DOCTYPE html>
<html>
  <head>
    <title>餐廳評論網</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a href="/" class="navbar-left"><span class="glyphicon
            glyphicon-home"></span></a>
          <% if current_user %>
            <% if current_user.admin? %>
              <a href="/admin/restaurants"><span class="glyphicon
                glyphicon-user"></span></a>
            <% end %>
          <% end %>
          <p class="navbar-text">Restaurant Forum</p>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <div class="nav navbar-nav navbar-right">
            <% if current_user %>
              Hi, <%= current_user.email %>
              <button type="button" class="btn btn-default navbar-btn">
                <%= link_to('登出', destroy_user_session_path, method: :delete) %>
              </button>
              <button type="button" class="btn btn-default navbar-btn">
                <%= link_to('修改密碼', edit_user_registration_path, class: "navbar-btn") %>
              </button>
            <% else %>
            <button type="button" class="btn btn-default navbar-btn">
              <%= link_to('註冊', new_user_registration_path) %>
            </button>
            <button type="button" class="btn btn-default navbar-btn">
              <%= link_to('登入', new_user_session_path) %>
            </button>
            <% end %>
          </div>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <div class="container-fluid">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= yield %>
    </div>
  </body>
</html>
